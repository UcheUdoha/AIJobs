modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Initialize NLP"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apply Schema"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Initialize NLP"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Job Scraper"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apply Schema Updates"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SpaCy Download"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SpaCy Model Install"

[[workflows.workflow]]
name = "Initialize NLP"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python initialize_nlp.py"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.address=0.0.0.0 --server.port=5000"

[[workflows.workflow]]
name = "Apply Schema"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python apply_schema_updates.py"

[[workflows.workflow]]
name = "Initialize NLP"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m spacy download en_core_web_sm"

[[workflows.workflow]]
name = "Job Scraper"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c 'from utils.job_scraper import JobScraper; scraper = JobScraper(); scraper.scrape_jobs()'"

[[workflows.workflow]]
name = "Apply Schema Updates"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python apply_schema_updates.py"

[[workflows.workflow]]
name = "SpaCy Download"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m spacy download en_core_web_sm"

[[workflows.workflow]]
name = "SpaCy Model Install"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install -U spacy && python -m spacy download en_core_web_sm"

[deployment]
run = ["sh", "-c", "python initialize_nlp.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 3000
